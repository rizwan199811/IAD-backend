<!DOCTYPE html>
<html lang="en">
  <%- include('header-nested') %>

<body id="page-top">

  <!-- Page Wrapper -->
  <div id="wrapper">

    <%- include('sidebar') %>
    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

      <!-- Main Content -->
      <div id="content">

        <!-- Topbar -->
        <%- include('nav-bar') %>
        <!-- End of Topbar -->

        <!-- Begin Page Content -->
        <div class="container-fluid">

          <!-- Page Heading -->
          <!-- DataTales Example -->
          
          <div class="d-flex justify-content ">
          
          </div>
          <div class="card-header mx-auto" style="width: 30rem;">
            <h6 class="font-weight-bold text-primary text-center">View Dish Details</h6>
          </div>
      
          <div class="card mx-auto" style="width:30rem">

            <img class="card-img-top" src="/../uploads/<%-records.image %>" alt="Card image" style="width:100%">
            <div class="card-body">
              <h6 class="card-title" style="font-weight: bold; color: black;">Dish Title:<span style="font-weight: lighter; color: gray;" class="ml-5"><%-records.dish %></span></h6>
